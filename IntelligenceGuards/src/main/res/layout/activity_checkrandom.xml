<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <LinearLayout
        android:id="@+id/checkrandom_liner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:orientation="horizontal" >

            <Button
                android:id="@+id/checkrandom_btn1"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_margin="10dp"
                android:layout_weight="1"
                android:background="@drawable/button_white"
                android:text="@string/checkrandom_btn1"
                android:textColor="@color/wathet" />

            <Button
                android:id="@+id/checkrandom_btn2"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_margin="10dp"
                android:layout_weight="1"
                android:background="@drawable/button_white"
                android:text="@string/checkrandom_btn2"
                android:textColor="@color/wathet" />
        </LinearLayout>
    </LinearLayout>

    <ListView
        android:id="@+id/checkrandom_listView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/checkrandom_liner"
        android:layout_marginTop="10dp"
        android:listSelector="@android:color/transparent" >
    </ListView>

</RelativeLayout>