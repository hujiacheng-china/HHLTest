<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="gov.xiangan.publicsanitation">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".MyApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/BaseAppTheme">

        <!-- 程序入口 -->
        <activity
            android:name=".HomeActivity"
            android:label="@string/app_name"
            android:theme="@style/BaseAppTheme"
            android:windowSoftInputMode="adjustPan|stateHidden">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <!-- 监督任务 -->
        <activity
            android:name=".activity.SuperviseTaskActivity"
            android:theme="@style/test" />
        <!-- 监督详情 -->
        <activity
            android:name=".activity.SuperviseInfoActivity"
            android:theme="@style/test" />
        <!-- 双随机抽查 -->
        <activity
            android:name=".activity.CheckRandomActivity"
            android:theme="@style/test" />
        <!-- 日常监督 -->
        <activity android:name=".activity.supervise.DailyTaskActivity" />
        <!-- 档案查询 -->
        <activity
            android:name=".activity.FileQueryActivity"
            android:theme="@style/test" />
        <!-- 地图 -->
        <activity
            android:name=".activity.MapActivity"
            android:theme="@style/test" />
        <!-- 附加程序 -->
        <activity
            android:name=".activity.OtherOnsActivity"
            android:theme="@style/test" />
        <!-- 拍照 ，视频，录音 -->
        <activity
            android:name=".activity.PhotographActivity"
            android:theme="@style/test" />
        <!-- 预警提示 -->
        <activity
            android:name=".activity.WarningTipsActivity"
            android:theme="@style/test" />
        <!-- 预警详情 -->
        <activity
            android:name=".activity.WaringTipsInfoActivity"
            android:theme="@style/test" />
        <!-- 现场快检 -->
        <activity
            android:name=".activity.QuickCheckActivity"
            android:theme="@style/test" />
        <!-- 登陆界面 -->
        <activity
            android:name=".activity.LoginActivity"
            android:theme="@style/MyLoginDialog"
            android:windowSoftInputMode="adjustPan|stateHidden" />
        <activity android:name=".activity.supervise.SuperviseQueryActivity" />
        <activity android:name=".activity.supervise.SuperviseDetailActivity"></activity>
        <activity
            android:name="com.lzy.imagepicker.ui.ImagePreviewDelActivity"
            android:theme="@style/ImagePickerThemeFullScreen"/>
    </application>

</manifest>